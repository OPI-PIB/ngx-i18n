{
	"name": "ngx-i18n",
	"version": "0.0.0",
	"scripts": {
		"ng": "ng",
		"build": "ng build ngx-i18n",
		"e2e-app:start": "ng serve e2e-app",
		"e2e-app:build": "ng build e2e-app",
		"e2e-app:test": "playwright test",
		"e2e-app:translate:build": "translate build --source=\"./projects/e2e-app/src/app/**/*+(.ts|.html)\" --dist=./projects/e2e-app/translations --i18n=./projects/e2e-app/src/app/core/i18n/translations --langs=en-US --langs=pl-PL",
		"prepare": "husky"
	},
	"private": true,
	"lint-staged": {
		"*.{js,mjs,ts}": "eslint --fix",
		"*": "prettier -u -w"
	},
	"prettier": "@opi_pib/prettier-config-base/ng",
	"engines": {
		"node": ">=24.0.0",
		"npm": ">=10.8.0"
	},
	"dependencies": {
		"@angular/common": "^21.0.0",
		"@angular/compiler": "^21.0.0",
		"@angular/core": "^21.0.0",
		"@angular/forms": "^21.0.0",
		"@angular/platform-browser-dynamic": "^21.0.0",
		"@angular/platform-browser": "^21.0.0",
		"@angular/router": "^21.0.0",
		"@ngx-translate/core": "^17.0.0",
		"@ngx-translate/http-loader": "^17.0.0",
		"@opi_pib/ts-utility": "^2.0.0",
		"rxjs": "~7.8.0",
		"tslib": "^2.3.0",
		"zod": "^4.0.0"
	},
	"devDependencies": {
		"@angular-devkit/build-angular": "^21.0.0",
		"@angular/cli": "^21.0.0",
		"@angular/compiler-cli": "^21.0.0",
		"@opi_pib/eslint-config-base": "^9.0.0",
		"@opi_pib/prettier-config-base": "^1.0.0",
		"@opi_pib/node-translate": "^2.0.0",
		"@playwright/test": "^1.50.0",
		"husky": "^9.0.0",
		"lint-staged": "^16.0.0",
		"ng-packagr": "^21.0.0",
		"typescript": "~5.9.2"
	},
	"optionalDependencies": {
		"zone.js": "~0.15.0"
	}
}
